{
  "name": "autou-email-classifier",
  "version": "1.0.0",
  "description": "Sistema de classificação de emails com IA - Desafio AutoU",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "dev:full": "./scripts/dev.sh",
    "build:full": "./scripts/build.sh",
    "backend": "cd backend && source venv/bin/activate && python run.py",
    "backend:install": "cd backend && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.294.0",
    "react-dropzone": "^14.2.0",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.4.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "@tailwindcss/typography": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
